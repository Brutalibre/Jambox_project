<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.val.databaseconnect_v2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="Login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Screen Activity -->
        <activity
            android:name=".MainScreenActivity"
            android:label="Jam'Box" >
        </activity>

        <!-- All Users Activity -->
        <activity
            android:name=".AllUsersActivity"
            android:label="Jam'Box - All Users" >
        </activity>

         <!-- All Friends Activity -->
        <activity
            android:name=".AllFriendsActivity"
            android:label="Jam'Box - All Friends" >
        </activity>
        
        <!-- Add User Activity -->
        <activity
            android:name=".NewUserActivity"
            android:label="Jam'Box - Add New User" >
        </activity>

        <!--  Display User Activity -->
        <activity
            android:name=".DisplayUserActivity"
            android:label="Jam'Box - Display User" >
        </activity>
        
        <!-- Add Friend Activity -->
        <activity
            android:name=".AddFriendActivity"
            android:label="Jam'Box - Add Friend" >
        </activity>

        <!-- Jam Activity -->
        <activity
            android:name=".JamActivity"
            android:label="Jam'Box - Add Friend" >
        </activity>
    </application>

</manifest>
